@model voting.Models.Poll

@{
    ViewBag.Title = "Delete";
}

<head>
    @Styles.Render("~/Content/AdminHome.css")
</head>
<div class="navbar navbar-inverse navbar-fixed-top" style="background-color: black">
    <div class="container">
        <div class="navbar-header">
            @Html.ActionLink("Home", "AdminHome", "Start", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("Polls", "Index", "Poll", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("Candidates", "Index", "Candidate", new { area = "" }, new { @class = "navbar-brand" })
           

        </div>
        <div class="navbar-right">
            <ul class="nav navbar-nav" style="list-style:none">
                <li>@Html.ActionLink("Logout", "Logout", "User")</li>
            </ul>
        </div>
    </div>
</div>

<div>
    <div class="container-fluid" style="padding:10px; background-color:crimson; color:white; text-align:center; margin-top:20px; margin-bottom: 20px;">
        <h4>Delete Poll</h4>
    </div>
    <div>
        <dl class="dl-horizontal">
            @*<dt s@*tyle="width: auto; text-align: center; margin-left: 43%;">
            @Html.DisplayNameFor(model => model.PollStatus)
        </dt>*@

            <dd style="width: auto; margin-left: 52%;">
                @Html.HiddenFor(model => model.PollStatus)
            </dd>

            <dt style="width: auto; text-align: center; margin-left: 43%;">
                @Html.DisplayNameFor(model => model.PollName)
            </dt>

            <dd style="width: auto; margin-left: 52%;">
                @Html.DisplayFor(model => model.PollName)
            </dd>


            <dd style="width: auto; margin-left: 52%;">
                @Html.HiddenFor(model => model.PollId)
            </dd>

            @*<dt style="width: auto; text-align: center; margin-left: 43%;">
            @Html.DisplayNameFor(model => model.Result)
        </dt>*@

            <dd style="width: auto; margin-left: 52%;">
                @Html.HiddenFor(model => model.Result)
            </dd>
        </dl>
    </div>

    <h4 style="margin-top: 40px; width: auto;text-align: center; color:red; font-size:x-large"><b>Are you sure you want to delete this Poll?</b></h4>

    @*@Html.ActionLink("Delete", "Delete", new { id = Model.PollId }, new { @class = "btn btn-default" })*@

    @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="margin-top:30px;">
                <div style="width: auto; text-align: center; margin: auto;">
                    <input type="submit" value="Delete" class="btn btn-primary" style="width:100px;" />
                </div>
            </div>
        }
    <div style="width: auto; text-align: center; margin-top:10px;">
        @Html.ActionLink("Cancel", "Index", new { }, new { @class = "btn btn-default", @style="width:100px" })
    </div>
</div>